<UserControl x:Class="Perl.Components.QueryDataPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Perl.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas Background="{DynamicResource BattleShipBrush}">
        <ListView ItemsSource="{Binding QueryRecordsViewModels}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="300" Header="Course Name" DisplayMemberBinding="{Binding CourseName}"/>
                    <GridViewColumn Width="120" Header="Enrolled" DisplayMemberBinding="{Binding Enrolled}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Canvas>
</UserControl>
